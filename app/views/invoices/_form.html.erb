      </ul>
    </div>
  <% end %>

  <div class="actions">
     <%= form_for @invoice do |f| %>
      <div class="form-group mt-4">
        <%= f.label "ราคา"  %>
        <%= f.text_field :amount ,class: 'form-control' %>
      </div>

      <div class="form-group mt-4">
      <%= f.label "วันที่ครบชำระ"  %>
      <%= f.date_field :invoice_date ,class: 'form-control' %>
      </div>

      <div class="form-group mt-4">
      <%= f.label "ชื่อลูกค้า"  %>
    <%= f.collection_select :invoice_user, Customer.all,:id,:name,{:prompt=> 'กรุณาเลือกลูกค้า'}, {:class=>'form-control'} %>
      </div>

      <div class="form-group mt-4">
      <%= f.label "เลขที่บิล"  %>
      <%= f.collection_select :bill_id, Bill.all,:id,:bill_no,{:prompt=> 'กรุณาเลือกเลขที่บิล'} , {:class=>'form-control'}%>
      </div>
      
      <div class="form-group mt-4">
         <%= f.submit 'บันทึก',class: 'btn btn-success mt-2'%>
      </div>

      </div>
