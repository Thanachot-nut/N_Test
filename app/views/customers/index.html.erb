<div class="container mt-4">
  <div class="row">
    <div class=" mb-2 card-header pd-0 d-flex align-items-center col-md-12">
      <div class="mr-auto"> 
        <h5 class=" font-weight-bold text-primary mb-0"><i class="fas fa-user"></i> รายการลูกค้า</h5>
         </div>
      <%= link_to 'เพิ่มลูกค้าใหม่', new_customer_path, class: 'btn btn-success d-inline' %>
    </div>
  </div>
  <div class="container-fluid">
    <% if notice %>
      <div  role="alert">
        <% if notice != 'ลูกค้ามีบิล หรือ ใบแจ้งหนี้อยู่ จึงไม่สามารถลบได้' %>
          <p class="alert mt-2 alert-success" id="notice"><%= notice %></p>
        <% else  %>
          <p class="alert mt-2 alert-danger" id="notice"><%= notice %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  <table class="table table-hover table-bordered mt-3" >
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col" >ชื่อลูกค้า</th>
        <th scope="col">วงเงิน</th>
        <th scope="col" colspan="2" >Action</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id%></td>
          <td><%= customer.name%></td>
          <td><%= number_to_currency(customer.credit, precision: 2,unit: " ") %> </td>
          <%# <td><%= link_to '<i class="far fa-eye"></i>'.html_safe, customer %></td>
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_customer_path(customer.id) %></td>
        <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, customer_path(customer.id), method: :delete, data: { confirm: 'คุณต้องการลบ "'+customer.name+'" หรือไม่ ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
